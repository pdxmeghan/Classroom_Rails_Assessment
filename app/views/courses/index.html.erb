<h1>Courses</h1>

<% ordered_courses = @courses.all.sort_by{|course| course.id} %>

<ul>
  <% ordered_courses.each do |course| %>
    <li><a href="/courses/<%= course.id %>"><%= course.name %></a> ||
        <a href="/courses/<%= course.id %>/edit">Edit<a> ||
        <a href="/courses/<%= course.id %>"
          data-confirm="Permanently delete course?"
          data-method="delete"
          rel="nofollow">Delete Course</a>
    </li>
  <% end %>
</ul>

<div class="footer">
  <br><a href="/teachers/new">Add a new teacher</a>
  <br><a href="/courses/new">Add a new course</a>
  <br><a href="students/new">Add a new student</a>
  <br><a href="/courses">See all courses</a>
  <br><a href="/students">See all students</a>
  <br><a href="/teachers">Go Home</a>
</div>
