<h1>Courses</h1>

<% ordered_courses = @courses.all.sort_by{|course| course.id} %>

<ul>
  <% ordered_courses.each do |course| %>
    <li><a href="/courses/<%= course.id %>"><%= course.name %></a> ||
        <a href="/courses/<%= course.id %>/edit">Edit<a> ||
    </li>
  <% end %>
</ul>

<p><a href="/courses/new">Add a Course</a></p>
